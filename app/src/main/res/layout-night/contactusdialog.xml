<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/Night_BG"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/email"
                />



            <!-- Title -->
            <TextView
                android:id="@+id/contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="অ্যাপ সম্পর্কিত যেকোনো বিষয়ে আপনার মূল্যবান মতামত আমাদের কাছে সব সময় স্বাগত।\nআপনার মতামত জানাতে নিচের বাটনে ক্লিক করুন।"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:justificationMode="inter_word"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/font1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />








            <Button
                android:id="@+id/emailbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Email"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/font1"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:backgroundTint="@color/Theme_color"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"

                />


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>
