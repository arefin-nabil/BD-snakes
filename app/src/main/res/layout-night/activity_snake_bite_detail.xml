<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnakeBiteDetail"
    android:orientation="vertical"
    android:background="@color/Night_BG"
    >

    <!-- ToolBar Section -->
    <LinearLayout
        android:id="@+id/titellinear"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Night_AppBar"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="left"
            android:src="@drawable/back"

            />

        <TextView
            android:id="@+id/tooltitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="সাপে কাটলে ওঝা নয়, হাসপাতালে চিকিৎসা হয়।-WSRTBD"
            android:textColor="@color/Theme_color"
            android:textSize="16sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/_5sdp"
        android:background="@color/Night_BG"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_17ssp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:layout_margin="@dimen/_4sdp"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Day_BG"
                android:layout_margin="@dimen/_4sdp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font1"
                android:textAlignment="viewStart"
                android:padding="5dp"
                android:textSize="@dimen/_14ssp"
                android:layout_margin="@dimen/_4sdp"
                android:justificationMode="inter_word"
                tools:ignore="NewApi"
                />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/bannerAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>