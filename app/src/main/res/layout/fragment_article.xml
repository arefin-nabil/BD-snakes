<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragments.ArticleFragment"
    android:background="@color/Day_BG">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- ImageView with aspect ratio to keep it responsive -->
                        <ImageView
                            android:id="@+id/coverimg1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/logo" />

                        <!-- TextView for item title -->
                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="সাপের সরিক্ষা আাসদের দাযয়িত্ব"
                            android:fontFamily="@font/font1"
                            android:textColor="@android:color/black"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_15ssp"
                            android:background="#F7FFE7"
                            android:gravity="center" />

                        <!-- TextView for item author -->
                        <TextView
                            android:id="@+id/author1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/font1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12ssp"
                            android:gravity="center"
                            android:background="#D6D6D6"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:padding="@dimen/_4sdp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- ImageView with aspect ratio to keep it responsive -->
                        <ImageView
                            android:id="@+id/coverimg2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/logo" />

                        <!-- TextView for item title -->
                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="সাপের সরিক্ষা আাসদের দাযয়িত্ব"
                            android:fontFamily="@font/font1"
                            android:textColor="@android:color/black"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_15ssp"
                            android:background="#F7FFE7"
                            android:gravity="center" />

                        <!-- TextView for item author -->
                        <TextView
                            android:id="@+id/author2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/font1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12ssp"
                            android:gravity="center"
                            android:background="#D6D6D6"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:padding="@dimen/_4sdp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/seemorebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/Theme_color"
                    android:fontFamily="@font/font1"
                    android:padding="@dimen/_10sdp"
                    android:text="আরো চমৎকার আর্টিকেল দেখুন..."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>